{
  "name": "universal-react-demo",
  "version": "0.1.0",
  "description": "A super slim demonstration of a universal React application.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "webpack-dev-server --hot --progress --host 0.0.0.0 --port 8000 --config webpack.client.config.js",
    "server-build": "export NODE_ENV=prod; webpack -p --progress --config webpack.server.config.js",
    "client-build": "export NODE_ENV=prod; webpack -p --progress --config webpack.client.config.js",
    "start": "concurrently \"npm run client-build\" \"npm run server-build\" && node build/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/5tefan/universal-react-demo.git"
  },
  "author": "Stefan Codrescu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/5tefan/universal-react-demo/issues"
  },
  "homepage": "https://github.com/5tefan/universal-react-demo",
  "devDependencies": {
    "babel-core": "^6.16.0",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "concurrently": "^3.1.0",
    "css-loader": "^0.27.3",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "favicons-webpack-plugin": "0.0.7",
    "html-webpack-plugin": "^2.22.0",
    "json-loader": "^0.5.4",
    "node-sass": "^4.5.0",
    "null-loader": "^0.1.1",
    "sass-loader": "^6.0.3",
    "source-map-support": "^0.4.3",
    "style-loader": "^0.14.0",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.3"
  },
  "dependencies": {
    "express": "^4.14.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0"
  }
}
